<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
      >
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/menu_linear"
    android:layout_marginTop="10dp">
    <ImageView
        android:id="@+id/img"
        android:layout_width="5dp"
        android:layout_height="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
      android:background="@mipmap/listmenu"
         />

    <ImageView
        android:id="@+id/stline"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_marginRight="10dp"
        android:background="@mipmap/st_line"
        />
</LinearLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:id="@+id/rel">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Artist Name"
            android:layout_marginTop="2dp"
            android:layout_marginRight="20dp"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/white"
           />

        <TextView
            android:id="@+id/tv_aname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Random Album"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/tv_name"
            android:textSize="14dp"
          android:textColor="@color/white"
            />
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/img_downloaded"
            android:background="@drawable/dwnloaded"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@+id/btn"
            android:layout_centerVertical="true"
            android:layout_marginLeft="45dp"
            android:visibility="gone"
            />

        <Button
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:id="@+id/btn"
            android:background="@mipmap/song_vlm"
            android:layout_marginTop="5dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            />


    </RelativeLayout>


</LinearLayout>