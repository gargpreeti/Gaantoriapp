<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Top Songs"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:layout_weight="1"
        android:background="@mipmap/quick_select"
        android:textAllCaps="false"
        android:id="@+id/btn_songs" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Top Albums"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:layout_weight="1"
        android:background="@mipmap/selected"
        android:textAllCaps="false"
        android:id="@+id/btn_albums" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Top Artists"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:layout_weight="1"
        android:background="@mipmap/quick_select"
        android:textAllCaps="false"
        android:id="@+id/btn_artists" />


</LinearLayout>



    <ListView
        android:id="@+id/list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:divider="@mipmap/st_line"
        android:dividerHeight="1dp"
        />



</LinearLayout>