                        android:id="@+id/gimg"
                        android:layout_marginTop="40dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginBottom="10dp"
                        android:background="@mipmap/name"
                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Email-Id"
                        android:id="@+id/username"
                        android:textColorHint="#b2b2b2"
                        android:textSize="18dp"
                        android:singleLine="true"
                        android:imeOptions="actionNext"
                        android:textCursorDrawable="@drawable/blackcursor"
                        android:background="@android:color/transparent"
                        android:textColor="@color/white"
                        android:layout_marginTop="40dp"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/gimg"
                        />
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/line"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginBottom="10dp"
                        android:layout_below="@+id/gimg"
                        android:background="@mipmap/line"
                        />

                </RelativeLayout>



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="20dp"
                        android:id="@+id/pimg"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginBottom="10dp"
                        android:background="@mipmap/lock"
                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Password"
                        android:id="@+id/pw1"
                        android:textSize="18dp"
                        android:textColorHint="#b2b2b2"
                        android:singleLine="true"
                        android:inputType="textPassword"
                        android:imeOptions="actionDone"
                        android:textCursorDrawable="@drawable/blackcursor"
                        android:background="@android:color/transparent"
                        android:textColor="@color/white"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/pimg"
                        />
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/line1"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginBottom="10dp"
                        android:layout_below="@+id/pimg"
                        android:background="@mipmap/line"
                        />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/btnlogin"
                        android:layout_marginTop="60dp"
                        android:text="Log in"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:textAllCaps="false"
                       android:layout_centerHorizontal="true"
                        android:layout_below="@+id/pimg"
                        android:background="@mipmap/btnlogin"
                        />

                </RelativeLayout>

