<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bgdialog"
        android:orientation="vertical"
        android:gravity="bottom">


        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@mipmap/slider_down"
            >


            <ImageView
                android:id="@+id/img_cross"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:layout_marginTop="1dp"
                android:layout_centerHorizontal="true"
                android:background="@mipmap/drop_arrow"

                />
            <ImageView
                android:id="@+id/img_cross1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:layout_marginTop="1dp"
                android:layout_centerHorizontal="true"
                android:visibility="invisible"
                android:background="@mipmap/drop_arrow"

                />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="400dp"
            android:background="@mipmap/detail_bg"
            >


            <ImageView
                android:id="@+id/img_song"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentTop="true"
                android:gravity="left"
                android:layout_marginTop="40dp"
              android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"

                android:background="@drawable/song"
                />

            <TextView
                android:id="@+id/tv_songname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:gravity="left"
                android:textColor="#ffffff"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/img_song"
                android:layout_toRightOf="@+id/img_song"
                android:layout_centerHorizontal="true"
                android:text=""
                />


            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="175dp"
                android:theme="@style/AppTheme.SeekBar"
                android:background="@mipmap/song_bg"
                android:layout_below="@+id/img_song"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@mipmap/song_bg"

            >

            <ImageView
                android:id="@+id/img_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="25dp"
                android:visibility="invisible"
                android:background="@mipmap/play"
                />

            <ImageView
                android:id="@+id/img_pause"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:gravity="center"

                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="25dp"
                android:background="@mipmap/pause"
                />




            <ImageView
                android:id="@+id/img_forwed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/img_pause"
                android:layout_marginTop="45dp"
                android:layout_marginLeft="30dp"
                android:background="@mipmap/forword"
                />

            <ImageView
                android:id="@+id/img_bck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/img_pause"
                android:layout_marginTop="45dp"
                android:layout_marginRight="30dp"
                android:background="@mipmap/backword"
                />


            <ImageView
                android:id="@+id/img_repeat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/img_bck"
                android:layout_marginTop="45dp"
                android:layout_marginRight="50dp"
                android:background="@mipmap/repeat"
                />

            <ImageView
                android:id="@+id/img_shuffl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/img_forwed"
                android:layout_marginTop="45dp"
                android:layout_marginLeft="50dp"
                android:background="@mipmap/shuffle"
                />

            <TextView
                android:id="@+id/tv_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/img_bck"
                android:layout_marginTop="7dp"
                android:textColor="#ffffff"
                android:layout_marginRight="67dp"
                android:text=""

                />

            <TextView
                android:id="@+id/tv_durationremain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/img_forwed"
                android:layout_marginTop="7dp"
                android:textColor="#ffffff"
                android:layout_marginLeft="50dp"
                android:text=""

                />

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>